%ul
  - if current_user
    %li
      Logged in as
      = link_to current_user.email, user_path(current_user)
    %li
      = link_to "Edit my profile", edit_user_path(current_user)
    - if organiser?
      %li
        = link_to 'New notice', new_notice_path
    %li
      = link_to "Log out", log_out_path
  - else
    %li
      = link_to "Sign in", sign_in_path
