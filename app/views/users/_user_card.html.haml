%aside#user_card
  = link_to image_tag(get_gravatar(user, 50), :title => user.full_name, :alt => user.full_name), user_path(user)
  %h3= link_to user.full_name, user_path(user)
  %ul
    %li.email Email: #{user.email}
    %li.twitter Twitter: #{user.twitter}
    %li.bonjour Bonjour: #{user.bonjour}
    %li.irc IRC: #{user.irc}
  - if current_user == user
    %ul.actions
      %li= link_to "Edit my profile", edit_user_path(user)
