%article.thought
  .description
    = textilize(thought.description).try(:html_safe)
  .presenter
    %a{:href => user_path(thought.user) }
      = user_avatar(thought.user)
      %span.name= thought.user
  %footer
    %ul.actions
      -if thought.liked_by? current_user
        %li= link_to "unlike", thought_unlike_path(thought), :"data-action" => "like"
      - else
        %li= link_to "like", thought_like_path(thought), :"data-action" => "unlike"
